<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_164"
        android:background="@mipmap/main_top_bg">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/h_140">

            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="@dimen/w_61"
                android:layout_height="@dimen/h_63"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/w_43"
                android:contentDescription="@null"
                android:scaleType="fitXY"
                android:src="@mipmap/logo" />

            <LinearLayout
                android:id="@+id/layout_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_title_search"
                    android:layout_width="@dimen/w_79"
                    android:layout_height="@dimen/h_79"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/w_20"
                    android:layout_marginRight="@dimen/w_50"
                    android:clickable="true"
                    android:contentDescription="@null"
                    android:focusable="true"
                    android:nextFocusLeft="@id/iv_title_search"
                    android:scaleType="fitXY"
                    android:background="@drawable/search_selector" />

            </LinearLayout>

            <ImageView
                android:id="@+id/main_title_focus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_title"
                android:contentDescription="@null"
                android:scaleType="fitXY"
                android:src="@color/black"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/iv_setting"
                android:layout_width="@dimen/w_49"
                android:layout_height="@dimen/h_49"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/w_50"
                android:background="@drawable/setting_selector"
                android:clickable="true"
                android:contentDescription="@null"
                android:focusable="true"
                android:scaleType="fitXY" />

            <RelativeLayout
                android:layout_width="@dimen/w_54"
                android:layout_height="@dimen/h_54"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/w_56"
                android:layout_toLeftOf="@id/iv_setting">

                <ImageView
                    android:id="@+id/iv_head"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:contentDescription="@null"
                    android:focusable="true"
                    android:padding="@dimen/w_2" />

            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>
