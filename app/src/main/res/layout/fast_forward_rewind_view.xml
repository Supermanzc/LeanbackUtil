<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/w_757"
    android:layout_height="@dimen/h_330"
    android:background="@mipmap/fast_view_bg"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_fast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/w_25"
            android:layout_marginRight="@dimen/w_25"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_fast_forward_rewind"
                android:layout_width="@dimen/w_56"
                android:layout_height="@dimen/h_43"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/w_20"
                android:contentDescription="@null"
                android:scaleType="fitXY"
                android:src="@mipmap/fast_view_forward" />

            <TextView
                android:id="@+id/tv_fast_current_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/w_28"
                android:layout_marginRight="@dimen/w_7"
                android:text="00:00"
                android:textColor="@color/green"
                android:textSize="@dimen/w_44" />

            <TextView
                android:id="@+id/tv_fast_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="/"
                android:textColor="@color/green"
                android:textSize="@dimen/w_24" />
            <!--total time -->
            <TextView
                android:id="@+id/tv_fast_total_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/w_20"
                android:text="00:00"
                android:textColor="@color/green"
                android:textSize="@dimen/w_24" />


        </LinearLayout>

        <com.wt.leanbackutil.view.CustomMediaSeekBar
            android:id="@+id/fast_seek_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/h_25"
            android:background="@null"
            android:focusable="false"
            android:maxHeight="@dimen/h_4"
            android:minHeight="@dimen/h_4"
            android:paddingLeft="@dimen/w_10"
            android:paddingRight="@dimen/w_10"
            android:progressDrawable="@drawable/seek_bar_style"
            android:splitTrack="false"
            android:thumb="@color/transparent"
            android:thumbOffset="@dimen/w_10" />

    </LinearLayout>
</LinearLayout>
