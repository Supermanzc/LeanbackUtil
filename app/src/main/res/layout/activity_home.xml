<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clipChildren="false"
    android:clipToPadding="false">

    <com.open.leanback.widget.HorizontalGridView
        android:id="@+id/title_guide"
        android:layout_width="match_parent"
        android:layout_height="@dimen/w_80"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/h_20"
        android:clipChildren="false"
        android:clipToPadding="false" />

    <com.wt.leanbackutil.view.TvViewPager
        android:id="@+id/tv_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title_guide" />
</RelativeLayout>