<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/w_80"
        android:layout_marginTop="@dimen/h_20"
        android:textSize="@dimen/w_45" />

    <com.wt.leanbackutil.view.TvRelativeLayout
        android:id="@+id/vertical_grid_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_320"
        android:layout_below="@+id/title"
        android:layout_marginLeft="@dimen/w_80"
        android:layout_marginTop="@dimen/h_20"
        android:clipChildren="false"
        android:clipToPadding="false" />
</RelativeLayout>