<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <RelativeLayout
        android:layout_width="@dimen/w_120"
        android:layout_height="@dimen/h_80"
        android:duplicateParentState="true">

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="@dimen/w_60"
            android:layout_height="@dimen/h_60"
            android:layout_marginTop="@dimen/h_10"
            android:layout_centerHorizontal="true"/>

        <!-- 下划线 -->
        <View
            android:id="@+id/title_line_view"
            android:layout_width="@dimen/w_80"
            android:layout_height="@dimen/h_2"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
</RelativeLayout>