<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_view"
        android:layout_width="@dimen/w_273"
        android:layout_height="@dimen/h_273"
        android:background="@drawable/shape_botton_bg_comm"
        android:duplicateParentState="true"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/title_view"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/h_45"
        android:ellipsize="end"
        android:gravity="center"
        android:paddingLeft="@dimen/w_16"
        android:paddingRight="@dimen/w_16"
        android:singleLine="true"
        android:textColor="@color/title_none_color"
        android:textSize="@dimen/h_33" />
</LinearLayout>